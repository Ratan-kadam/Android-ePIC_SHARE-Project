<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bj_c"
    android:alpha=".70"
    tools:context="com.example.ratan_000.imageupload.options">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AddFriends"
        android:id="@+id/AddFriends" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ShareAlbum"
        android:id="@+id/ShareAlbum" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Shared Album"
        android:id="@+id/SharedWithMe"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display My Albums"
        android:id="@+id/ButtonDisplayMyAlbums" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Album"
        android:id="@+id/CreateAlbum" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Group"
        android:id="@+id/AddGroup" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Image"
        android:id="@+id/gotoSearch"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Album with Group"
        android:id="@+id/gotoShareWithGroup"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Members to Group"
        android:id="@+id/gotoAddMembers2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Group Members"
        android:id="@+id/gotoShowGroupMembers" />

</LinearLayout>
