<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bj_c"
    tools:context="com.example.ratan_000.imageupload.addMember2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD FRIENDS TO GROUP"
        android:id="@+id/textView24"
        android:gravity="center_horizontal"
        android:textColor="#ff3610a0" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:id="@+id/ListOfFriend1"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Group"
        android:id="@+id/textView18"
        android:gravity="center_horizontal"
        android:textColor="#ff3610a0" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/ListOfMyGroups1"
        android:layout_weight="0.47"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Member to Group"
        android:id="@+id/ButtonToAddMember1"
        android:background="#ff3610a0"
        android:textColor="#fffbfff8" />

</LinearLayout>
