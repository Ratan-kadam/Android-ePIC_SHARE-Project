<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bj_c"
    tools:context="com.example.ratan_000.imageupload.DeleteAlbum">

    <TextView android:text="Select Album tobe deleted" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:gravity="center_horizontal"
        android:textColor="#ff3610a0" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:id="@+id/DeleteList"
        android:layout_below="@+id/textView21"
        android:layout_alignRight="@+id/textView21"
        android:layout_alignEnd="@+id/textView21" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ToDelete" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/DeleteAlbum"
        android:background="#ff3610a0"
        android:textColor="#fffbfff8" />

</LinearLayout>
