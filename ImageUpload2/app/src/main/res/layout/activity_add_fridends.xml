<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bj_c"
    android:alpha=".70"
    tools:context="com.example.ratan_000.imageupload.AddFridends"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD FRIEND"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff3610a0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name "
        android:id="@+id/FriendNAme"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#ff3610a0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/FriendName"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmailAddress"
        android:id="@+id/FriendEmailID"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff3610a0"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/FriendEmail"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff3610a0"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AddFriend"
        android:id="@+id/ButtonAddFriend"
        android:layout_gravity="center_horizontal"
        android:background="#ff3610a0"
        android:textColor="#fffbfff8"
        android:padding="20px"
        android:layout_margin="20px" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:id="@+id/listView5"
        android:layout_gravity="center_horizontal"
        style="@style/AppTheme" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get User List"
        android:id="@+id/getFriends"
        android:background="#ff3610a0"
        android:textColor="#fffbfff8"
        android:layout_margin="20dp" />
</LinearLayout>
